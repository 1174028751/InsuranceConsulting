/* pages/discuss_again/discuss_again.wxss */
.background
{
  display: flex;
  background-color: #fff;
  flex-direction:column;
  justify-content: flex-start;
  margin-top:15rpx;
  margin-bottom: 10px;
  padding:25rpx;
  box-shadow:0px 1px 1px #888888;
}
.headline
{
  display: flex;
  flex-direction: row;
  width:100%;
  height:65rpx;
}
.tou
{
  display:flex;
  width:70rpx;
  height:70rpx;
  border: 1px none;
  border-radius:50px;
  margin-right:30rpx;
}
.small{
  margin-top: 15rpx;
  font-size: 35rpx;
  color:#dedede;
}
.border_all
{
  display: flex;
}
.two_question
{
  display: -webkit-box;
  width:100%;
  height:100%;
  font-size:40rpx;
  color:#000000;
  line-height:60rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
  font-weight:900;
  margin-top:-10px;

}

.two_question.answer
{  
  color:#515151;
  font-size:34rpx;
  -webkit-line-clamp:3;
  font-weight:100;
}