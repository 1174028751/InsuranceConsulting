page{
    background-color: #f6f6f6;

}

.container{
    padding: 0;
    font-size: 35rpx;
    box-sizing: border-box;
     display:block;
}
 
 .list-btn {
  align-items: center;
  font-size: 11pt;
  padding-left:15px;
  margin-bottom: 10rpx;
  display: flex;
  background-color: #fff;
  min-height: 85rpx;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}
.list-btn:active {
  background-color: #fcfcfc;
}
.btn-icon {
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}
.picker{
    display:block;
width:50%;
margin-left:150rpx;
font-size:35rpx;

}
 
.issues-label{
    line-height: 100%;
    color: #999;
    margin: 25rpx 20rpx 15rpx;
}
.issues-panel{
    display: flex;
    flex-direction: column;
    align-items: stretch;
    background-color: #fff;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    margin-top:1%;
    margin-bottom:4%;


}
 
.issues-input{
    padding: 15rpx 25rpx;
}
.issues-input.error{
    background: rgba(231, 138, 176, 0.06);
}
.issues-textarea{
    width: 100%;
    padding: 25rpx;
    min-height: 225rpx;
    box-sizing: border-box;
}
.issues-textarea.error{
    background: rgba(231, 138, 176, 0.06);
}
 
 .issues-photo
 {
   display:flex;
 }
 
 
.submit-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left:100rpx;
    margin-right:100rpx;
    height: 90rpx;
    border-radius: 3px;
    text-align: center;
    background-color: #73b4ef;
    color: #fff;
    font-size: 12pt;
    line-height: 150%;
    padding: 0;
    border: none;
}
.submit-btn.disabled{
    opacity: .7;
}
.submit-btn:active{
    opacity: .7;
}
.box-top{
  margin-top:10rpx; 
  background: #fff;
  padding-bottom:20rpx;
  font-size: 35rpx;
  border-top:1px solid #F0F0F0;
  border-bottom:1px solid #F0F0F0;
  margin-bottom:10rpx;

 }

.middle{
  padding-bottom:15rpx;
  margin-left:10rpx;
  border-bottom: 1px solid #F0F0F0;
}

.content{
